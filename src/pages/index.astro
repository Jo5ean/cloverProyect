---
import Layout from '../layouts/Layout.astro';
import Header from "../components/Header.astro";
import Carousel from '../components/Carousel.astro';
import About from '../components/About.astro';
import Footer from '../components/Footer.astro';
import Galery from '../components/Galery.astro';
import Banner from '../components/Banner.astro';
---

<Layout title="Grupo AVG" description="Somos una empresa de desarrollos inmobiliarios con la impronta de los emprendedores que desafÃ­an la realidad establecida y proponen nuevas experiencias.">
	<Header />
	<main>
		<section class="relative overflow-hidden">
			<div class="absolute top-0 left-0 w-full h-full bg-black bg-opacity-90 z-100">
			  <!-- Fondo con opacidad -->
			</div>
			<div class="h-screen w-full text-center relative z-0 flex flex-col justify-end">
			  <Carousel />
			</div>
		  </section>
		 
	</main>
	
	<About />
	<Banner titulo="PROYECTOS"/>
	<Galery />
	<Banner titulo="LUISITO"/>
	<Footer />
</Layout>

<style>
	.relative {
  background-image: url('/3.webp'); /* Agrega la imagen como fondo */
  background-position: center; /* Centra la imagen */
  background-size: cover; /* Ajusta la imagen para que cubra el contenedor */
  background-attachment: fixed; /* Crea el efecto parallax */
}
</style>