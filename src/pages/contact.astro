<style>
    .subrayado {
      padding: 0;
      margin: 0;
      border: none;
      background: none;
      cursor: pointer;
    }
  
    .subrayado {
      --primary-color: #ffff;
      --hovered-color: #ffff;
      position: relative;
      display: flex;
      font-weight: 600;
      gap: 0.5rem;
      align-items: center;
    }
  
    .subrayado p {
      margin: 0;
      position: relative;
      color: var(--primary-color);
    }
  
    .subrayado::after {
      position: absolute;
      content: "";
      width: 0;
      left: 0;
      bottom: -1px;
      background: var(--hovered-color);
      height: 2px;
      transition: 0.3s ease-out;
    }
  
    .subrayado p::before {
      position: absolute;
      /*   box-sizing: border-box; */
      width: 0%;
      inset: 0;
      color: var(--hovered-color);
      overflow: hidden;
      transition: 0.3s ease-out;
    }
  
    .subrayado:hover::after {
      width: 100%;
    }
  
    .subrayado:hover p::before {
      width: 100%;
    }
    .card-client {
  background: #023E8A;
  width: 16rem;
  padding-top: 25px;
  padding-bottom: 25px;
  padding-left: 20px;
  padding-right: 20px;
  border: 4px solid #023E8A;
