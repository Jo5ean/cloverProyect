<style>
    .subrayado {
      padding: 0;
      margin: 0;
      border: none;
      background: none;
      cursor: pointer;
    }
  
    .subrayado {
      --primary-color: #ffff;
      --hovered-color: #ffff;
      position: relative;
      display: flex;
      font-weight: 600;
      gap: 0.5rem;
      align-items: center;
    }
  
    .subrayado p {
      margin: 0;
      position: relative;
      color: var(--primary-color);
    }
  
    .subrayado::after {
      position: absolute;
      content: "";
      width: 0;
      left: 0;
      bottom: -1px;
      background: var(--hovered-color);
      height: 2px;
      transition: 0.3s ease-out;
    }
  
    .subrayado p::before {
      position: absolute;
      /*   box-sizing: border-box; */
      width: 0%;
      inset: 0;
      color: var(--hovered-color);
      overflow: hidden;
      transition: 0.3s ease-out;
    }
  
    .subrayado:hover::after {
      width: 100%;
    }
  
    .subrayado:hover p::before {
      width: 100%;
    }
    .card {
            position: relative;
        justify-content: center;
        align-items: center;
      border-radius: 50px;
      box-shadow: rgba(0, 0, 0, 0.17) 0px -23px 25px 0px inset, rgba(0, 0, 0, 0.15) 0px -36px 30px 0px inset, rgba(0, 0, 0, 0.1) 0px -79px 40px 0px inset, rgba(0, 0, 0, 0.06) 0px 2px 1px, rgba(0, 0, 0, 0.09) 0px 4px 2px, rgba(0, 0, 0, 0.09) 0px 8px 4px, rgba(0, 0, 0, 0.09) 0px 16px 8px, rgba(0, 0, 0, 0.09) 0px 32px 16px;
    }
  </style>
  