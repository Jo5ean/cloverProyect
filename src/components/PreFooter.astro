---
import Card from "./Card.astro"
---
<div class="relative overflow-hidden flex items-center justify-center bg-[#023E8A] bg-opacity-60">
    <div class="grid md:grid-cols-2 relative">
        <div class="flex items-center justify-center lg:h-screen hidden lg:block relative">
            <!-- Columna con imagen -->
            <img
                src="/ingeniero.jpg"
                alt="Grupo de trabajadores"
                class="w-full h-full object-cover"
            />
        </div>
        <div class="flex items-center justify-center p-4">
         <Card />
        </div>
        <div class="flex items-center justify-center lg:h-screen block lg:hidden">
            <!-- Columna con imagen -->
            <img
                src="/ingeniero.jpg"
                alt="Grupo de trabajadores"
                class="w-full h-full object-cover"
            />
        </div>
    </div>
</div>
